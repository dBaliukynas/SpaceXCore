@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-2 title">Welcome to SpaceX Core!</h1>
    <h1 class="display-4 mb-20">Rockets</h1>
    <div class="card-list">
        @foreach (var item in ViewBag.rockets)
        {
            <div class="card card-item card-item-medium-wide" style="width: 18rem;">
                <img src="@item.Images[0]" class="card-img-top card-image" alt="...">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <a href="rocket/@item.Id" class="btn btn-primary mt-auto">More information</a>
                </div>
            </div>
        }
    </div>
    <h1 class="display-4 mb-20">Latest launch</h1>
    <a href="launch/@ViewBag.latestLaunch.Id" class="medium-sized-image-container">
        <h2>@ViewBag.latestLaunch.Name</h2>
        <img src="@ViewBag.latestLaunch.Image" class="img-fluid medium-sized-image mb-20" alt="...">
    </a>
   
    <h1 class="display-4 mb-20">All launches</h1>
    <div class="card-list">
        @foreach (var item in ViewBag.launches)
        {
            <div class="card card-item" style="width: 18rem;">
                <img src="@item.Image" class="card-img-top card-image image-contain" alt="...">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text truncate-7">@item.Details</p>
                    <a href="launch/@item.Id" class="btn btn-primary mt-auto">More information</a>
                </div>
            </div>
        }
    </div>

</div>
